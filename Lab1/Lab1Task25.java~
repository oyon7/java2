import java.util.Scanner;
public class Lab1Task25{
    public static void main (String [] args){
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter a number");
        int num=sc.nextInt();
        for(int row=1; row<=num; row++){
            for(int spc=1; spc<=num-1; spc++)
                System.out.print(" ");
            System.out.println();
        }
    }
}
import java.util.Scanner;
public class Lab1Task14{
    public static void main(String[]args){
        Scanner sc = new Scanner(System.in);
        int a=sc.nextInt();
        for(int row=1; row<=a; ++row){
            for(int spc=1; spc<=a-1; ++spc)
                System.out.print(" ");
            for(int i=1; i<=a; ++i)
                System.out.print(i);
            for(int i=a-1; i>=1; --i)
                System.out.print(i);
        }
    }